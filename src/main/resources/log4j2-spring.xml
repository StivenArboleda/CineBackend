<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] %c{1} - %m%n"/>
        </Console>

        <RollingFile name="AppLog" fileName="logs/app.log"
                     filePattern="logs/app-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%p] %c{1} - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="com.fabrica.cine.backend.service.movie" level="info" additivity="false">
            <AppenderRef ref="AppLog"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="com.fabrica.cine.backend.service.ticket" level="info" additivity="false">
            <AppenderRef ref="AppLog"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="com.fabrica.cine.backend.service.user" level="info" additivity="false">
            <AppenderRef ref="AppLog"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="warn">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AppLog"/>
        </Root>
    </Loggers>

</Configuration>
